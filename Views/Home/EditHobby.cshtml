
<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <title>Success</title>
        <link rel="stylesheet" href="~/css/style.css"/>
        
    </head>
    <body>
        <a href="/Hobbies" style="margin-left: 850px;">Hobbies</a>
        <a href="/logout" style="margin-left: 50px;">Logout</a>
        <h1>
            Edit a Hobby
        </h1>

        @using Hobby.Models
        @model Hobbies
        <form asp-action="/EditHobbies" asp-controller="Home" method="post">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name"></label>
            <input asp-for="Name" value="@ViewBag.Name">
            <br>
            <span asp-validation-for="Description"></span>
            <label asp-for="Description"></label>
            <input asp-for="Description" value="@ViewBag.Description">

            <input type="submit" value="Create">
        </form>

    </body>
</html>